{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<div class="container">
    <h1>Panier </h1>
    <table class="table table-bordered">
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total prix</th>
            <th>Actions</th>
        </tr>

        {% for item in items %}
            <tr>
                <td> {{item.product.name}}</td>
                <td> {{item.product.price}} EUR</td>
                <td> {{item.quantity}}</td>
                <td> {{item.product.price * item.quantity}} EUR</td>
                <td>
                    <a href="{{ path('app_cart_product_remove', {'id': item.product.id }) }}" class="text-danger text-decoration-none"> Supprimer du panier</a>
                </td>
            </tr>
        {% else %}
        <p> Votre panier est vide </p>
        {% endfor %}
    </table>

    {% if total > 0 %}

    <br>
    <h2> Total : {{total}} EUR </h2>

    <div class="row">
        <a href="" class="btn btn-outline-primary"> Valider la commande</a>
    
        <a href=" {{path('app_cart_remove') }}" class="btn btn-outline-danger"> Supprimer le panier</a>
    </div>

    {% endif %}
</div>
{% endblock %}
