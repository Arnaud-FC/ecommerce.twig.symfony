{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <h1>Product</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_product_index') }}">back to list</a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

        {{ include('product/_delete_form.html.twig') }}


        <h2> Historique des stocks</h2>
        <a class="btn btn-success" href="{{ path('app_product_stock_add_history', {'id': product.id}) }}">Afficher l'historique du stock</a>


    </div>


{% endblock %}
